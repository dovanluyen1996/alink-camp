<?xml version='1.0' encoding='utf-8'?>
<widget id="jp.rights.alink.golftenki.dev" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>jp.rights.alink.golftenki_dev</name>
    <description>
      Alink GolfTenki Client
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
      Alink GolfTenki Client
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidXEnabled" value="true"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="UseSwiftLanguageVersion" value="5" />

        <config-file target="*-Info.plist" parent="CFBundleDevelopmentRegion">
            <string>Japanese</string>
        </config-file>
        <config-file target="*-Info.plist" parent="CFBundleLocalizations">
          <array>
            <string>ja</string>
          </array>
        </config-file>

        <config-file target="*-Info.plist" parent="NSLocationAlwaysAndWhenInUseUsageDescription">
          <string>位置情報をコース検索に利用します</string>
        </config-file>

        <config-file target="*-Info.plist" parent="NSLocationAlwaysUsageDescription">
            <string>位置情報をコース検索に利用します</string>
        </config-file>

        <config-file target="*-Info.plist" parent="NSLocationWhenInUseUsageDescription">
            <string>位置情報をコース検索に利用します</string>
        </config-file>

        <edit-config target="NSUserTrackingUsageDescription" file="*-Info.plist" mode="merge">
          <string>表示する広告を適切に選択するために使用します。</string>
        </edit-config>

        <config-file target="*-Info.plist" parent="NSCameraUsageDescription">
          <string>カメラを許可してください</string>
        </config-file>

        <config-file target="*-Info.plist" parent="NSPhotoLibraryUsageDescription">
          <string>写真へのアクセスを許可してください</string>
        </config-file>
    </platform>
</widget>
